<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Custom TextAppearance for Month Title -->
    <style name="CalendarMonthTitleTextAppearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Custom TextAppearance for Weekday Names -->
    <style name="CalendarWeekDayTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomRoundedDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:windowBackground">@drawable/rounded_corners</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>