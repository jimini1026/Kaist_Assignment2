<resources>

    <!-- Base application theme. -->
    <style name="Theme.Kaist_Assignment2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary branding color. -->
        <item name="colorPrimary">@color/custom_purple</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="CustomTimePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/black</item>
        <item name="android:headerBackground">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:numbersTextColor">@color/black</item>
        <item name="android:numbersBackgroundColor">@color/custom_yellow</item>
        <item name="android:colorAccent">@color/black</item>
        <item name="android:numbersSelectorColor">@color/custom_purple</item>
    </style>


</resources>
